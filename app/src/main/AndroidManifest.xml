<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dzak.doadandzikir">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoaDanDzikir">
        <activity
            android:name="com.dzak.doadandzikir.activity.SetiapSaatDzikirActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName="com.dzak.doadandzikir.MainActivity"/>
        <activity
            android:name="com.dzak.doadandzikir.activity.QouliyahShalatActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName="com.dzak.doadandzikir.MainActivity"/>
        <activity
            android:name="com.dzak.doadandzikir.activity.PagiPetangDzikirActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName="com.dzak.doadandzikir.MainActivity"/>
        <activity
            android:name="com.dzak.doadandzikir.activity.HarianDzikirDoaActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName="com.dzak.doadandzikir.MainActivity"/>
        <activity
            android:name="com.dzak.doadandzikir.activity.DzikirPetangActivity"
            android:exported="true"
            android:theme="@style/PetangActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.dzak.doadandzikir.activity.PagiPetangDzikirActivity"/>
        <activity
            android:name="com.dzak.doadandzikir.activity.DzikirPagiActivity"
            android:exported="true"
            android:theme="@style/PagiActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.dzak.doadandzikir.activity.PagiPetangDzikirActivity"/>
        <activity
            android:name="com.dzak.doadandzikir.activity.DetailArtikelActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName="com.dzak.doadandzikir.MainActivity"/>
        <activity
            android:name="com.dzak.doadandzikir.activity.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dzak.doadandzikir.MainActivity"
            android:exported="true"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>